<a href="javascript:void(0);" @onclick="Toggle" class="@(Shown ? "shown" : "")">
    @Title
    <span>@Count</span>
</a>


@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public int Count { get; set; }

    [Parameter]
    public bool Shown { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [CascadingParameter]
    public HelpAccordion Parent { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Parent?.AddTab(this);
    }

    private void Toggle()
    {
        Shown = !Shown;
        Parent?.Update();
    }
}
